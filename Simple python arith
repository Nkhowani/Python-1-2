#Простая арифметика вариант 2
number = int(input("Введите целое число: "))

next_number = number + 1
previous_number = number - 1

#Вывод
print("The next number for the number", number, "is", next_number,)
print("The previous number for the number", number, "is", previous_number,)

#Условная инструкция вариант 3

def sign(x):
    if x > 0:
        return 1
    elif x < 0:
        return -1
    else:
        return 0
number_2 = float(input("Введите число sign(x): "))
print(sign(number_2))
lab #7
def MinDivisor(n, i=2):
    while i * i <= n:
        if n % i == 0:
            return i
        i += 1
    return n
    
print("Введите натуральное число")    
n = int(input())

print("Найменьше делитель:", MinDivisor(n))
